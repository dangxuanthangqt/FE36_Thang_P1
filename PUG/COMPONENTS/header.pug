
mixin list-social()
    ul.header__contact
        each val in ["fab fa-facebook-f", "fab fa-twitter", "fab fa-vimeo-v", "fab fa-facebook-f"]
            li.header__contact__item
                a(href="#")
                    i(class=val)


mixin logo ()
    .header__middle__logo
        img.header__middle__logo--desktop(src="../../IMG/logo.png" alt="")
        img.header__middle__logo--mobile(src="../../IMG/logo-mobile.png" alt="")
        p.header__textlogo Món quà từ thiên nhiên                    
section.header
    include ../VARIABLE/header.pug
    .container
        .header__top
            .header__top-1
                .header__time 
                    p.gray-text--light Open time : 8:00 - 18:30 Monday - Sunday
                +list-social()

            .header__top-2
                a.header__login(href="./login.html")
                    i.fas.fa-user
                    | Đăng nhập
                a.header__register(href="./register.html")
                    i.fas.fa-user
                    | Đăng ký
    .header__middle
        .container
            .header__middle__img
                +logo()


                div.header__middle__img2
                    div
                        img(src="../../IMG/HEADER/img-1.png" alt="")
                    div
                        img(src="../../IMG/HEADER/img-2.png" alt="")
            .header__middle__search
                .header__middle__form
                    p 
                        i(class="fas fa-phone")
                        |Hỗ trợ : (09) 79475216 - (09) 79475216
                    form(action="")
                        div.header__middle__form--1
                            input(type="text" name="a" placeholder="Tìm kiếm ...")
                            i(class="fas fa-search")
                        div.header__middle__form--2
                            a(href="./cart.html")
                                img(src="../../IMG/HEADER/sp.png" alt="")
                                
                            p 
                                span#productQuantityInCart 0     
                                | Sản phẩm
    nav.header__nav
        .container
            ul.nav__list
                li.nav__item
                    a(href="#")
                        img(src="../../IMG/HEADER/icon_collapse.png" alt="")
                li.nav__item
                    a(href="./home.html") Trang chủ
                li.nav__item
                    a(href="./grid.html") Giới thiệu
                li.nav__item.nav__item--list
                    a.nav__item--drop(href="./list.html") Sản phẩm
                    ul.dropdown
                        each val in ["Sản phẩm","Sản phẩm","Sản phẩm"]
                            li
                                a(href="#")= val

                li.nav__item.nav__item--list
                    a.nav__item--drop(href="#") Sản phẩm mới
                    ul.dropdown
                        each val in ["Sản phẩm mới","Sản phẩm mới","Sản phẩm mới"]
                            li
                                a(href="#")= val
                li.nav__item
                    a(href="./news.html") Tin tức
                li.nav__item
                    a(href="./contact.html") Liên hệ
        div.nav__mobile 
            div.nav__mobile--1
                a.nav__mobile__collapse(href="#")
                    img(src="../../IMG/HEADER/icon_collapse.png" alt="")
                ul.nav__mobile__list
                    each val in list_nav_mobile
                        li.nav__mobile__item
                            a(href="#")=val
            div.nav__mobile--2
                i(class="fas fa-search")
                img(src="../../IMG/HEADER/icon-mobile.png" alt="")




