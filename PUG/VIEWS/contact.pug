extends ../LAYOUT/common-layout.pug 
//-------------------
mixin bread-crumb(val)
    a.bread-crumb(href="./home.html") Home | 
    a.bread-crumb.bread-crumb--active(href="./home.html")=val
mixin form-control(val)
    div.register__form__control
        label.register__form__label=val
            span *
        input(type="text")
mixin logo ()
    .header__middle__logo
        img.header__middle__logo--desktop(src="../../IMG/logo.png" alt="")
        img.header__middle__logo--mobile(src="../../IMG/logo-mobile.png" alt="")
        p.header__textlogo Món quà từ thiên nhiên      
//--------------------------
block title
    title Contact
block content
    section.breadcrumb
        .container
            +bread-crumb("Liên hệ")
    section.contact__map
        iframe(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3833.688013538043!2d108.21545055173556!3d16.081671596324025!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3142183bf027977d%3A0x6e907bc08380188b!2zTMO9IFRoxrDhu51uZyBLaeG7h3QsIFRo4bqhY2ggVGhhbmcsIEjhuqNpIENow6J1LCDEkMOgIE7hurVuZyA1NTAwMDAsIFZp4buHdCBOYW0!5e0!3m2!1svi!2s!4v1600936537871!5m2!1svi!2s' frameborder='0' style='border:0;' allowfullscreen='' aria-hidden='false' tabindex='0')
    section.contact__form
        .container
            .contact__form__left
                h3.register__form__title THÔNG TIN LIÊN HỆ
                +form-control("Họ và tên")
                +form-control("Địa chỉ email")
                +form-control("Số điện thoại")
                div.register__form__control
                    label.register__form__label Bình luận
                        span *
                    textarea.textarea__contact(name="asasd" rows="10" placeholder="Bình luận")
            .contact__form__right
                +logo()
                p.contact__desc Lorem ipsum dolor sit amet consectetur adipisicing elit. Cumque qui quia voluptas ipsum quae blanditiis sapiente, accusamus eum dolor obcaecati possimus laborum consectetur iusto molestias quibusdam ducimus mollitia perferendis? Saepe?
